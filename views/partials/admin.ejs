<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 2rem;
        }
        .admin-container {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            max-width: 1200px;
            margin: 0 auto;
        }
        h1 {
            color: #0d6efd;
            margin-bottom: 2rem;
            text-align: center;
        }
        .stats-card {
            background: linear-gradient(45deg, #0d6efd, #0dcaf0);
            color: white;
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1rem;
        }
        .nav-pills .nav-link.active {
            background-color: #0d6efd;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <h1>Admin Dashboard</h1>
        
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <h3>Total Orders</h3>
                    <h2 class="mb-0"><%= stats.totalOrders %></h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <h3>Total Products</h3>
                    <h2 class="mb-0"><%= stats.totalProducts %></h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <h3>Total Revenue</h3>
                    <h2 class="mb-0">$<%= stats.totalRevenue %></h2>
                </div>
            </div>
        </div>

        <ul class="nav nav-pills mb-3" id="adminTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="orders-tab" data-bs-toggle="pill" href="#orders">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="products-tab" data-bs-toggle="pill" href="#products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="customers-tab" data-bs-toggle="pill" href="#customers">Customers</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="orders">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= order.id %></td>
                                    <td><%= order.customer %></td>
                                    <td><%= order.date %></td>
                                    <td><span class="badge bg-<%= order.status === 'completed' ? 'success' : 'warning' %>">
                                        <%= order.status %>
                                    </span></td>
                                    <td>$<%= order.total %></td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>